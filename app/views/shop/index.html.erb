<ul class='cards-container'>
  <% @items.each do |item| %>
    <% if item.status == 'active' %>
      <%= link_to item_path(item) do %>
        <li class='card'>
          <div class="card-image-container">
              <div class="card-image">
                <%= image_tag asset_path item.image %>
              </div>
          </div>
          <div class="card-bottom">
              <h3><%= item.title %></h3>
              <p><%= t('.price', item_price: number_to_currency(item.price)) %> </p>
              <%= button_to t('.add_to_cart'), cart_path(item_id: item.id), title: item.title, class: 'create-button' %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
