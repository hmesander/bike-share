<!DOCTYPE html>
<html>
  <head>
    <% if content_for? :for_head %>
      <%= yield :for_head %>
    <% else %>
      <title><%= t('.app_name') %></title>
    <% end %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="nav-bar">
      <div class="nav-left">
        <h1 class="navy-header"><%= link_to t('.best'), root_path %></h1>
        <h1 class="sky-header"><%= link_to t('.app_name'), root_path %></h1>
      </div>
      <% if current_user  %>
        <div class="nav-center">
          <% if current_admin? %>
            <p><%= link_to t('.admin_notify'), dashboard_path %>
            <%= link_to current_user.name, dashboard_path %> - <%= link_to 'Go to Admin Dashboard', admin_dashboard_path %></p>
          <% else %>
            <p><%= link_to t('.user_notify'), dashboard_path %>
            <%= link_to current_user.name, dashboard_path %></p>
          <% end %>
        </div>
        <div class="nav-right">
          <p><%= link_to t('.logout'), logout_path, class: "button" %></p>
        </div>
        <div class="nav-center">
          <p><%= link_to "#{t('.cart')} #{@basket.total_count}" , cart_path %></p>
        </div>
      <% else %>
        <div class="nav-center">
          <p><%= link_to t('.login'), login_path %></p>
        </div>
        <div class="nav-right">
          <p><%= link_to t('.create_account'), new_user_path, class: "button" %></p>
        </div>
        <div class="nav-center">
          <p><%= link_to t('.cart', count: @basket.total_count), cart_path %></p>
        </div>
      <% end %>
    </nav>
    <div class="row sky-blue">
      <div class="white-links">
        <p><%= link_to t('.conditions'), conditions_path %></p>
        <p><%= link_to t('.trips'), trips_path %></p>
        <p><%= link_to t('.stations'), stations_path %></p>
        <p><%= link_to t('.shop'), bike_shop_path %></p>
      </div>
    </div>
    <% unless flash.empty? %>
      <div class="flash">
        <% flash.each do |type, message| %>
        <%= content_tag :div, sanitize(message), class: type %>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
